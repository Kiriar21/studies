<Window x:Class="zadanie.dodajGreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zadanie"
        mc:Ignorable="d"
        Title="dodajGreWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="addGameButton" Content="Dodaj gre" HorizontalAlignment="Left" Margin="266,284,0,0" VerticalAlignment="Top" Height="102" Width="184" Click="AddGamer"/>
        <TextBox x:Name="nameGame" HorizontalAlignment="Left" Margin="298,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Nazwa gry
               " HorizontalAlignment="Left" Margin="219,137,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="67">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-1.867"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>

    </Grid>
</Window>
