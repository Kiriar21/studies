<Window x:Class="lab8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="Studenci" HorizontalAlignment="Left" Height="249.8" Margin="110,89,0,0" VerticalAlignment="Top" Width="499" d:ItemsSource="{d:SampleData ItemCount=10}" />
        <Button x:Name="add" Content="Dodaj" HorizontalAlignment="Left" Margin="170,39,0,0" VerticalAlignment="Top" Height="40" Width="95" Click="add_Click"/>
        <Button x:Name="del" Content="Usun" HorizontalAlignment="Left" Margin="335,39,0,0" VerticalAlignment="Top" Height="40" Width="95" Click="deleteClick"/>
        <Button x:Name="oce" Content="Ocena" HorizontalAlignment="Left" Margin="485,39,0,0" VerticalAlignment="Top" Height="40" Width="75" Click="dodajOcene"/>

    </Grid>
</Window>
