<Window x:Class="pierwsze_kolos.showGradesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pierwsze_kolos"
        mc:Ignorable="d"
        Title="showGradesWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="GradesDataGrid" d:ItemsSource="{d:SampleData ItemCount=1}" Margin="0,84,10,235"/>
        <TextBox x:Name="userID" HorizontalAlignment="Left" Margin="140,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False" Height="23" />
        <TextBox x:Name="avgGrades" HorizontalAlignment="Left" Margin="320,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="23" IsEnabled="False"/>
        <Button x:Name="addGradeButton" Content="Dodaj Ocene " HorizontalAlignment="Left" Margin="560,23,0,0" VerticalAlignment="Top" Click="addGrade" Height="39" Width="80"/>
        <Label Content="Numer Indeksu" HorizontalAlignment="Left" Margin="154,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Średnia Ucznia" HorizontalAlignment="Left" Margin="336,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
