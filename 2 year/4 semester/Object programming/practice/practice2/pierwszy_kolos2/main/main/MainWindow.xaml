<Window x:Class="main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:main"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="StudentsGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,39,400,260" Height="NaN" Width="NaN"/>
        <Button x:Name="addUser" Content="Dodaj Studenta" HorizontalAlignment="Left" Margin="535,54,0,0" VerticalAlignment="Top" Click="Add"/>
        <Button x:Name="delUser" Content="Usuń Studenta" HorizontalAlignment="Left" Margin="537,92,0,0" VerticalAlignment="Top" Click="DelUser"/>
        <Button x:Name="showGrades" Content="Pokaż Oceny" HorizontalAlignment="Left" Margin="542,134,0,0" VerticalAlignment="Top" Click="ShowGrades"/>
        <TextBox x:Name="idSearch" HorizontalAlignment="Left" Margin="490,194,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="searchID" Content="Wyszukaj" HorizontalAlignment="Left" Margin="645,179,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,-0.649" Height="38" Width="90" Click="SearchUser"/>

    </Grid>
</Window>
