<Window x:Class="pierwsze_kolos.AddGradeWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pierwsze_kolos"
        mc:Ignorable="d"
        Title="AddGradeWindows" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="subject" HorizontalAlignment="Center" Margin="0,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="grade" HorizontalAlignment="Center" Margin="0,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="addGradeButton" Content="Dodaj Ocene" HorizontalAlignment="Center" Margin="0,224,0,0" VerticalAlignment="Top" Click="addGrade" Height="40" Width="120"/>
        <Label Content="Nazwa Przedmiotu" HorizontalAlignment="Left" Margin="215,110,0,0" VerticalAlignment="Top"/>
        <Label Content="Ocena" HorizontalAlignment="Left" Margin="281,165,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
