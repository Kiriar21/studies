        <Button x:Name="addStudentB" Content="Dodaj Studenta" HorizontalAlignment="Left" Margin="380,202,0,0" VerticalAlignment="Top" Click="addUser" Height="42" Width="120"/>
        <Label Content="Imie" HorizontalAlignment="Left" Margin="333,80,0,0" VerticalAlignment="Top"/>
        <Label Content="Nazwisko" HorizontalAlignment="Left" Margin="306,121,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.914,0.579"/>
