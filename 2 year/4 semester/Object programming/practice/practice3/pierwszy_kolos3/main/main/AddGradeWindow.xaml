<Window x:Class="main.AddGradeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:main"
        mc:Ignorable="d"
        Title="AddGradeWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="addGradeButton" Content="Dodaj" HorizontalAlignment="Left" Margin="290,0,0,0" VerticalAlignment="Center" Height="60" Width="155" Click="AddGrade"/>
        <TextBox x:Name="subjectName" HorizontalAlignment="Left" Margin="325,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="gradeValue" HorizontalAlignment="Left" Margin="325,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Przedmiot" HorizontalAlignment="Left" Margin="235,69,0,0" VerticalAlignment="Top"/>
        <Label Content="Ocena" HorizontalAlignment="Left" Margin="235,119,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
